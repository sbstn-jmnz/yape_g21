<h1><%= @user.name %></h1>
<p>Compras del usuario</p>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Producto</th>
      <th scope="col">Precio</th>
      <th scope="col">Comprado hace</th>
    </tr>
  </thead>
  <tbody>
    <% @user.purchases.each do |purchase|%>
    <tr>
      <td><%= purchase.product.name%></td>
      <td><%= purchase.product.price%></td>
      <td><%= time_ago_in_words purchase.created_at%></td>
    </tr>
    <% end %>
  </tbody>
</table>